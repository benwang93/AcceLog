<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="benwang93.com.accelog.SaveCSVActivity">

    <TextView android:text="Saving data to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/SaveCSVActivity_EditText_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SaveCSVActivity_Button_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close"/>

        <Button
            android:id="@+id/SaveCSVActivity_Button_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"/>

    </LinearLayout>

    <TextView
        android:id="@+id/SaveCSVActivity_TextView_Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
